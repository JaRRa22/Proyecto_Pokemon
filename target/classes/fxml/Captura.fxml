<AnchorPane prefHeight="401.0" prefWidth="479.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.Proyecto_Pokemon.controller.CapturaController">
   <children>
      <ImageView fx:id="fondoImageView" fitHeight="409.0" fitWidth="602.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../imagenes/FondoCaptura.png" />
         </image>
      </ImageView>
      <Button fx:id="btnCapturar" layoutX="266.0" layoutY="302.0" mnemonicParsing="false" onAction="#btnCapturarIsPressed" prefHeight="25.0" prefWidth="67.0" text="Capturar" />
      <Label fx:id="labelText" layoutX="230.0" layoutY="26.0" prefHeight="17.0" prefWidth="126.0" />
      <Label fx:id="labeltex2" layoutX="462.0" layoutY="35.0" prefHeight="17.0" prefWidth="126.0" />
      <Button fx:id="bntPokeAleatorio" layoutX="239.0" layoutY="341.0" mnemonicParsing="false" onAction="#bntPokeAleatorioIsPressed" prefHeight="25.0" prefWidth="117.0" text="Pokemon aleatorio" />
      <ImageView fx:id="charmanderImageView" fitHeight="219.0" fitWidth="245.0" layoutX="190.0" layoutY="68.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../imagenes/Charmander.png" />
         </image>
      </ImageView>
      <ImageView fx:id="squirtleImageView" fitHeight="219.0" fitWidth="236.0" layoutX="187.0" layoutY="68.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../imagenes/Squirtle.png" />
         </image>
      </ImageView>
      <ImageView fx:id="picahcuImageView" fitHeight="237.0" fitWidth="193.0" layoutX="197.0" layoutY="68.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../imagenes/Picachu.png" />
         </image>
      </ImageView>
      <MenuButton fx:id="menuPokeballs" layoutX="14.0" layoutY="31.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="126.0" text="Pokeballs">
        <items>
          <MenuItem fx:id="pokeballMenu" mnemonicParsing="false" onAction="#menuItemPokeballPressed" text="Pokeball">
               <graphic>
                  <ImageView fx:id="imgPokeball" fitHeight="58.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../imagenes/Pokeball.png" />
                     </image>
                  </ImageView>
               </graphic>
            </MenuItem>
          <MenuItem fx:id="superballMenu" mnemonicParsing="false" onAction="#menuItemSuperballPressed" text="Superball">
               <graphic>
                  <ImageView fx:id="imgSuperball" fitHeight="52.0" fitWidth="104.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../imagenes/Superball.png" />
                     </image>
                  </ImageView>
               </graphic>
            </MenuItem>
            <MenuItem fx:id="ultraballMenu" mnemonicParsing="false" onAction="#menuItemUltraballPressed" text="Ultraball">
               <graphic>
                  <ImageView fx:id="imgUltraball" fitHeight="52.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../imagenes/Ultraball.png" />
                     </image>
                  </ImageView>
               </graphic>
            </MenuItem>
            <MenuItem fx:id="masterballMenu" mnemonicParsing="false" onAction="#menuItemMasterballPressed" text="Masterball">
               <graphic>
                  <ImageView fx:id="imgMasterball" fitHeight="59.0" fitWidth="55.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../imagenes/Materball.png" />
                     </image>
                  </ImageView>
               </graphic>
            </MenuItem>
        </items>
      </MenuButton>
      <Button fx:id="btnIrAMenu" layoutX="525.0" layoutY="13.0" mnemonicParsing="false" onAction="#irAMenu" text="Menu" />
   </children>
</AnchorPane>
